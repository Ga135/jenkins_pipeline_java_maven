<version>0.0.1-SNAPSHOT</version>
	<name>jenkins_pipeline_java_maven</name>
	<description>For TTFHW of Jenkinsfile within a java project</description>
<properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.release>8</maven.compiler.release> <!-- Recommended over source/target -->
</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
		</dependency>
	</dependencies>

	<build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version> <!-- Latest stable as of now -->
        <configuration>
          <release>8</release> <!-- Instead of source/target -->
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
